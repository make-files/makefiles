#!/usr/bin/env bash
set -euo pipefail

workload=$1

defer=$(mktemp)
env_file=$(mktemp)
chmod +x "$defer"

function leave {
    "$defer"
    rm "$defer" "$env_file"
}
trap leave EXIT

i=3 # account for $0, $workflow and "--" argument

ctx=$(kubectl config current-context)
ns=$(kubectl config view --minify -o jsonpath='{..namespace}')

for port in ${@:2}; do
    if [[ "$port" == "--" ]]; then
        break
    fi

    name="${ctx}_${ns}_${workload}_${port}"
    local_port="$((32768 + $RANDOM))"

    telepresence \
        --use "$name" \
        connect \
        --name "$name" \
        --context "$ctx" \
        --namespace "$ns"
    telepresence \
        --use "$name" \
        intercept \
        "$name" \
        --workload "$workload" \
        --port "${local_port}:${port}" \
        --env-file="${env_file}"

    echo "telepresence --use '${name}' connect --name '${name}' --context '${ctx}' --namespace '${ns}'" >> "$defer"
    echo "telepresence --use '${name}' leave '${name}'" >> "$defer"
    ((i++))

    echo "TELEPRESENCE_PORT_${port}=$local_port" >> "$env_file"

    # Remove lines without a valid name. Telepresence circa v2.11 seems to
    # produce a nameless variable in its output.
    sed -i -e "/^[ \t]*=/d" "$env_file"

    # Add single quotes to each environment variable
    sed -i -e "s/^\([^=]*\)=\(.*\)$/export \1='\2'/" "$env_file"
    source "$env_file"

done

${@:$i}
